{
  "title": "chrome left_option devtools / right_option selector",
  "rules": [
    {
      "description": "chrome left_option devtools / right_option selector",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": ["any" ]
            }
          },
          "to": [
            {
              "key_code": "left_option",
              "modifiers": ["any"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "j",
              "modifiers": [
                "left_command",
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.google.Chrome"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": ["any" ]
            }
          },
          "to": [
            {
              "key_code": "right_option",
              "modifiers": ["any"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "c",
              "modifiers": [
                "left_command",
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.google.Chrome"
              ]
            }
          ]
        }
      ]
    }
  ]
}
