{
  "title": "vim nav: Preview, Kindle, iBooks",
  "rules": [{
    "description": "vim keys in Preview, Kindle, iBooks",
    "manipulators": [{
      "type": "basic",
      "from": {
        "key_code": "h"
      },
      "to": [{
        "key_code": "left_arrow"
      }],
      "conditions": [{
        "type": "frontmost_application_if",
        "bundle_identifiers": [
          "com.apple.Preview",
          "com.apple.iBooksX",
          "com.amazon.Kindle"
        ],
        "file_paths": [
          "/Applications/Preview.app/Contents/MacOS/Preview",
          "/Applications/iBooks.app/Contents/MacOS/iBooks",
          "/Applications/Kindle.app/Contents/MacOS/Kindle"
        ]
      }]
    },
