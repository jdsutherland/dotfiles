{
  "title": "Alacritty",
  "rules": [
    {
      "description": "alacritty: fix alfred",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": {
            "key_code": "spacebar",
            "modifiers": "left_command"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "alacritty: CTRL-I => F6 to allow separate <tab> maps in vim TODO https://github.com/neovim/neovim/issues/5916",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": {
            "key_code": "f6"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "alacritty: l_cmd => l_opt (cmd DNE in vim/tmux) / tap tmux zoom (tmux.conf hack) ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command"
          },
          "to": {
            "key_code": "left_option"
          },
          "to_if_alone": [
            {
              "key_code": "tab",
              "modifiers": "left_option"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "alacritty: fn tap / git file (follow) history in tmux split (vimrc hack) - nnoremap <M-S-z> :TmuxGitIndividualFileHistory<cr>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "optional": "any"
            }
          },
          "to": {
            "key_code": "fn",
            "modifiers": ["any"]
          },
          "to_if_alone": [
            {
              "key_code": "z",
              "modifiers": ["left_option", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "alacritty: l_control tap / git file (follow) history in tmux split (vimrc hack) - nnoremap <M-S-x> :TmuxGitFileFullHistory<cr>",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": "any"
            }
          },
          "to": {
            "key_code": "left_control",
            "modifiers": ["any"]
          },
          "to_if_alone": [
            {
              "key_code": "x",
              "modifiers": ["left_option", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "alacritty: l_opt tap / tmux git diff (tmux.conf hack) ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": "any"
            }
          },
          "to": {
            "key_code": "left_option",
            "modifiers": ["any"]
          },
          "to_if_alone": [
            {
              "key_code": "c",
              "modifiers": ["left_option", "left_shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "alacritty: r_opt tap / tmux git diff staged (tmux.conf hack) ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": "any"
            }
          },
          "to": {
            "key_code": "right_option",
            "modifiers": ["any"]
          },
          "to_if_alone": [
            {
              "key_code": "c",
              "modifiers": ["left_option", "left_control"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "paren on shift tap",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift"
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "9",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift"
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "0",
              "modifiers": [
                "right_shift"
              ]
            }
          ]
        }
      ],
      "conditions": [
        {
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "^io\\.alacritty$"
          ]
        }
      ]
    }
  ]
}
