{
  "title": "Alacritty",
  "rules": [
    {
      "description": "alacritty: fix alfred",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": {
            "key_code": "spacebar",
            "modifiers": "left_command"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "alacritty: l_cmd => l_opt (cmd DNE in vim/tmux) / tap tmux zoom (tmux.conf hack) ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command"
          },
          "to": {
            "key_code": "left_option"
          },
          "to_if_alone": [
            {
              "key_code": "tab",
              "modifiers": "left_option"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "alacritty: fn tap / git file (follow) history in tmux split (vimrc hack) ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "optional": "any"
            }
          },
          "to": {
            "key_code": "fn",
            "modifiers": ["any"]
          },
          "to_if_alone": [
            {
              "key_code": "z",
              "modifiers": ["left_option", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "alacritty: l_opt tap / tmux git diff (tmux.conf hack) ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": "any"
            }
          },
          "to": {
            "key_code": "left_option",
            "modifiers": ["any"]
          },
          "to_if_alone": [
            {
              "key_code": "c",
              "modifiers": ["left_option", "left_shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "alacritty: r_opt tap / tmux git diff staged (tmux.conf hack) ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": "any"
            }
          },
          "to": {
            "key_code": "right_option",
            "modifiers": ["any"]
          },
          "to_if_alone": [
            {
              "key_code": "c",
              "modifiers": ["left_option", "left_control"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    }

  ]
}
