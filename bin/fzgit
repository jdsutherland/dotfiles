#!/usr/bin/env bash

# http://junegunn.kr/2015/03/browsing-git-commits-with-fzf/
#   Based on: https://gist.github.com/junegunn/f4fca918e937e6bf5bad
# fshow - git commit browser (enter for show, ctrl-d for diff, ` toggles sort)
# - Renamed to fzgit, and made into a script.

# bash: bind '"\eq": "fzgit\n"'
bindkey -s '\eq' "fzgit\n"

if ! command -v fzf > /dev/null 2>&1; then
  >&2 echo "You don't have fzf installed!"
  exit 127
fi

if [[ -d .git ]] || git rev-parse --git-dir > /dev/null 2>&1; then
  git log --graph --color=always \
          --format="%C(auto)%h%d %s %C(black)%C(bold)%cr" "$@" |
  fzf --ansi --no-sort --reverse --tiebreak=index --toggle-sort=\` \
      --prompt="^d:diff, ^l:log -p, ^n: show --name-status,<enter>: show: " \
      --bind "ctrl-d:execute:
                echo '{}' | grep -o '[a-f0-9]\{7\}' | head -1 |
                xargs -I % sh -c 'git diff --color=always % | diff-so-fancy | less -Rc'" \
      --bind "ctrl-o:execute:
                echo '{}' | grep -o '[a-f0-9]\{7\}' | head -1 |
                xargs -I % sh -c 'git log -p --color=always %.. | diff-so-fancy | less -Rc'" \
      --bind "ctrl-n:execute:
                echo '{}' | grep -o '[a-f0-9]\{7\}' | head -1 |
                xargs -I % sh -c 'git show --name-status --color=always %.. | diff-so-fancy | less -Rc'" \
      --bind "ctrl-m:execute:
                echo '{}' | grep -o '[a-f0-9]\{7\}' | head -1 |
                xargs -I % sh -c 'git show --color=always % | diff-so-fancy | less -Rc'"
else
  echo -e "Not a git repo"
fi

# vim: set ft=sh:
