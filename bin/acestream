#!/usr/bin/env bash

# acestream <acestreamid> [startdocker]

id=$1

if echo "$id" | grep -q "acestream"; then
	id=$(basename "$id")
fi

if [[ $2 ]]; then
	docker run -t -p 8000:8000 ikatson/aceproxy &
fi

mpv --player-operation-mode=pseudo-gui --no-resume-playback http://localhost:8000/pid/"$id"/stream.mp4 &
