#!/bin/sh

workout() {
  workout_vid="$HOME/Desktop/7-minute_workout_routine.mp4.trimmed.mp4"

  cmd0="say -v Kanya 'You better work, bitch'"
  cmd1="mpv --no-pause --no-video --no-resume-playback --shuffle --ytdl-format=bestaudio ytdl://ytsearch10:'run the jewels'"
  cmd2="mpv --no-pause --no-resume-playback --fullscreen $workout_vid"

  (
    echo $cmd0
    echo $cmd1
    echo $cmd2
  ) | parallel

  say -v Kanya 'Take a shower, you smelly fuck'
}
workout
