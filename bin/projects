#!/bin/zsh

# List all directories in $PROJECT_DIRECTORIES that contain git repositories.

cdpath_directories() {
  echo "${PROJECT_DIRECTORIES//:/\n}" | while read dir; do
    find -L "$dir" \
      -not -path '*/\.*' \
      -type d \
      -maxdepth 1
  done
}

is_a_git_repo(){
  while read dir; do
    if [[ -d "$dir/.git" ]]; then
      echo "$dir"
    fi
  done
}

cdpath_directories | sort -u | is_a_git_repo
